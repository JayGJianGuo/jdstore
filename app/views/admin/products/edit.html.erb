<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title, label: "产品名称" %>
  </div>

  <div class="group">
    <%= f.input :description, label: "产品信息" %>
  </div>

  <div class="group">
    <%= f.input :quantity, label: "库存数量" %>
  </div>

  <div class="group">
    <%= f.input :price, label: "价格" %>
  </div>

  <% if @product.image.present? %>
    <span>目前商品图</span><br>
    <%= image_tag(@product.image.thumb.url) %>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file, label: "产品图片" %>
  </div>

  <%= f.submit "送出", class: "btn btn-default", data:{ disable_with: '上传中……' } %>
<% end %>
